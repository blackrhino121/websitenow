    <script>
        AOS.init({ duration: 800, once: true });
        
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }

        // Featured Plans Pricing Toggle
        (function() {
            var featuredToggle = document.getElementById('featured-pricing-toggle');
            if (!featuredToggle) return;

            function toggleFeaturedPricing(isYearly) {
                var monthlyEls = document.querySelectorAll('.featured-price-monthly');
                var yearlyEls = document.querySelectorAll('.featured-price-yearly');
                var periodLabels = document.querySelectorAll('.featured-price-period');
                var monthlyLabel = document.getElementById('toggle-label-monthly');
                var yearlyLabel = document.getElementById('toggle-label-yearly');

                monthlyEls.forEach(function(el) {
                    if (isYearly) {
                        el.classList.add('hidden');
                    } else {
                        el.classList.remove('hidden');
                    }
                });

                yearlyEls.forEach(function(el) {
                    if (isYearly) {
                        el.classList.remove('hidden');
                    } else {
                        el.classList.add('hidden');
                    }
                });

                periodLabels.forEach(function(el) {
                    el.textContent = isYearly ? '/yr' : '/mo';
                });

                // Update label colors for better UX
                if (monthlyLabel && yearlyLabel) {
                    if (isYearly) {
                        monthlyLabel.classList.remove('text-[#6366f1]', 'font-semibold');
                        monthlyLabel.classList.add('text-gray-400', 'font-medium');
                        yearlyLabel.classList.remove('text-gray-400', 'font-medium');
                        yearlyLabel.classList.add('text-[#6366f1]', 'font-semibold');
                    } else {
                        yearlyLabel.classList.remove('text-[#6366f1]', 'font-semibold');
                        yearlyLabel.classList.add('text-gray-400', 'font-medium');
                        monthlyLabel.classList.remove('text-gray-400', 'font-medium');
                        monthlyLabel.classList.add('text-[#6366f1]', 'font-semibold');
                    }
                }
            }

            // Initialize with monthly (set active label)
            var monthlyLabel = document.getElementById('toggle-label-monthly');
            if (monthlyLabel) {
                monthlyLabel.classList.add('text-[#6366f1]', 'font-semibold');
                monthlyLabel.classList.remove('text-gray-400', 'font-medium');
            }
            toggleFeaturedPricing(false);

            // Wire up toggle
            featuredToggle.addEventListener('change', function(e) {
                toggleFeaturedPricing(e.target.checked);
            });
        })();
    </script>
