    <script>
        AOS.init({ duration: 800, once: true });
        
        // --- FAQ Toggle Logic (Reused from support.ejs) ---
        function toggleFAQ(faqId) {
            const content = document.getElementById(`faq-content-${faqId}`);
            const icon = document.getElementById(`faq-icon-${faqId}`);
            const item = document.querySelector(`[data-faq-id="${faqId}"]`);
            if (!content || !icon || !item) return;

            const isOpen = content.classList.contains('open');
            
            // Close all other FAQs
            document.querySelectorAll('.faq-content').forEach(faqContent => {
                if (faqContent !== content && faqContent.classList.contains('open')) {
                    const otherId = faqContent.id.replace('faq-content-', '');
                    const otherIcon = document.getElementById(`faq-icon-${otherId}`);
                    const otherItem = document.querySelector(`[data-faq-id="${otherId}"]`);
                    
                    faqContent.classList.remove('open');
                    faqContent.style.maxHeight = '0';
                    if (otherIcon) otherIcon.classList.remove('rotate-180');
                    if (otherItem) otherItem.classList.remove('active');
                }
            });

            // Toggle current FAQ
            if (isOpen) {
                content.classList.remove('open');
                content.style.maxHeight = '0';
                icon.classList.remove('rotate-180');
                item.classList.remove('active');
            } else {
                content.classList.add('open');
                content.style.maxHeight = content.scrollHeight + 'px';
                icon.classList.add('rotate-180');
                item.classList.add('active');
            }
        }
    </script>
